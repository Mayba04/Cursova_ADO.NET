<Window x:Class="Bookstore_visually.AddingGenre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstore_visually"
        mc:Ignorable="d"
        
        Title="AddingGenre" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Margin="5" Content="Name:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="GenreNameBox" Margin="5" Grid.Column="1" BorderBrush="Black" ></TextBox>
        <Button Margin="5" Grid.Row="2" Grid.ColumnSpan="2" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Center" Click="AddGenreBTN"></Button>
    </Grid>
</Window>
