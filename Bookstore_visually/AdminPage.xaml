<Window x:Class="Bookstore_visually.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstore_visually"
        mc:Ignorable="d"
        Title="AdminPage" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Book ">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Button Content="Add Book" Width="100" Margin="5" Click="Button_Click_3"/>
                        <Button Content="Delete Book" Width="100" Margin="5" Click="Button_Click_2" />
                        <Button Content="Update Book" Width="100" Margin="5" Click="Button_Click" />
                        <Button Content="GetAll Book" Width="100" Margin="5" Click="Button_Click_1"/>
                    </StackPanel>
                    <DataGrid Name="dataGrid"  Grid.Row="1" Margin="10" IsReadOnly="False"></DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
